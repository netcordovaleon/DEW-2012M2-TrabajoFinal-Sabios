<h1>Listado de Categoria</h1>

<table class="grilla" style="width:700px;">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to 'Ver', category %></td>
    <td><%= link_to 'Editar', edit_category_path(category) %></td>
    <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' } %></td>
  </tr>
<% end %>
</table>

